{
    "version": 2,
    "public": true,
    "functions": {},
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "rewrites": [
        {
            "source": "/",
            "destination": "/public/index.html"
        },
        {
            "source": "/about",
            "destination": "/public/about.html"
        },
        {
            "source": "/contact-me",
            "destination": "/public/contact-me.html"
        }
    ]
}